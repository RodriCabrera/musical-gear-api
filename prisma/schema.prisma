generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Guitar {
  id        Int    @id @default(autoincrement())
  model     String
  brandName String
  brand     Brand  @relation(fields: [brandName], references: [name], onDelete: NoAction, onUpdate: NoAction)
  year      Int?
}

model Pedal {
  id        Int     @id @default(autoincrement())
  model     String
  name      String? @unique
  brandName String
  brand     Brand   @relation(fields: [brandName], references: [name], onDelete: NoAction, onUpdate: NoAction)
  year      Int?
}

model Brand {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  code   String   @unique
  Guitar Guitar[]
  Pedal  Pedal[]
}
