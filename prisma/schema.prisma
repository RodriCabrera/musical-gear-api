generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Guitar {
  id          Int     @id @default(autoincrement())
  model       String
  name        String? @unique
  brandName   String
  description String?
  brand       Brand   @relation(fields: [brandName], references: [name], onDelete: NoAction, onUpdate: Cascade)
  year        Int?
}

model Pedal {
  id          Int     @id @default(autoincrement())
  brand       Brand   @relation(fields: [brandName], references: [name], onDelete: NoAction, onUpdate: Cascade)
  brandName   String
  description String?
  model       String
  year        Int?
}

model Brand {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  code   String   @unique @db.Char(3)
  Guitar Guitar[]
  Pedal  Pedal[]
}
